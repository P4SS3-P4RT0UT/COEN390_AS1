<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="100dp"
    android:layout_marginTop="100dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/settings_btn"
        android:layout_gravity="top|center"
        android:layout_marginBottom="75dp"
        android:text="@string/settings_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/counter1_btn"
        android:layout_gravity="center"
        android:text="@string/placeholder_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/counter2_btn"
        android:layout_gravity="center"
        android:text="@string/placeholder_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/counter3_btn"
        android:layout_gravity="center"
        android:text="@string/placeholder_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/totalcountview"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_txt"
        />
    <Button
        android:id="@+id/showmycounts_btn"
        android:layout_gravity="center_horizontal"
        android:text="@string/showmycounts_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>