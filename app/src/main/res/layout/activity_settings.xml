<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <!-- Toolbar -->
    <include
        android:id="@+id/settings_toolbar"
        layout="@layout/toolbar"/>

    <!-- Counter 1 name -->
    <TextView
        android:id="@+id/counter1name"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/counter_1_name_txt"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <!-- Counter 1 edit text -->
    <EditText
        android:id="@+id/counter1edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:hint="@string/write_name_here"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:maxLength="20"
        android:minHeight="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="#8D6E63"
        tools:ignore="Autofill" />

    <!-- Counter 2 name -->
    <TextView
        android:id="@+id/counter2name"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/counter_2_name_txt"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <!-- Counter 2 edit text -->
    <EditText
        android:id="@+id/counter2edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:hint="@string/write_name_here"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:maxLength="20"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        tools:ignore="Autofill"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Counter 3 name -->
    <TextView
        android:id="@+id/counter3name"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/counter_3_name_txt"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <!-- Counter 3 edit text -->
    <EditText
        android:id="@+id/counter3edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:hint="@string/write_name_here"
        android:inputType="text"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:maxLength="20"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        tools:ignore="Autofill"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Maximum counts -->
    <TextView
        android:id="@+id/maxcount"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/max_count_txt"
        android:textSize="24sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>

    <!-- Maximum counts edit text -->
    <EditText
        android:id="@+id/maxcountedittxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:hint="@string/write_max_count_here"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColorHint="#8D6E63"
        tools:ignore="Autofill"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <!-- Save button -->
    <Button
        android:id="@+id/save_btn"
        android:layout_gravity="center"
        android:text="@string/save_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:cornerRadius="0dp"/>

</LinearLayout>